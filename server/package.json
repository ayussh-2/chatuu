{
    "name": "chatuu-server",
    "version": "1",
    "description": "backend server for chatuu",
    "main": "./src/index.js",
    "author": "Ayush",
    "license": "MIT",
    "type": "module",
    "private": false,
    "scripts": {
        "dev": "nodemon --legacy-watch ./src/index.js",
        "start": "node ./src/index.js",
        "prisma-migrate": "npx prisma migrate dev --name init",
        "docker-migrate": "docker-compose exec app yarn prisma migrate dev",
        "docker-restart": "docker-compose down && docker-compose build && docker-compose up -d && docker-compose exec app yarn prisma generate",
        "docker-generate": "docker-compose exec app yarn prisma generate",
        "docker-logs": "docker-compose logs -f",
        "docker-build": "docker build -t chatuu-server . ",
        "docker-down": "docker-compose down",
        "docker-up": "docker-compose up -d",
        "docker-build-push": "docker-compose build app && docker-compose push app"
    },
    "dependencies": {
        "@prisma/client": "^5.20.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "express-session": "^1.18.0",
        "jsonwebtoken": "^9.0.2",
        "nodemon": "^3.1.7",
        "passport": "^0.7.0",
        "passport-google-oauth2": "^0.2.0",
        "prisma": "^5.20.0",
        "redis": "^4.7.0",
        "socket.io": "^4.8.0",
        "uuid": "^10.0.0",
        "uuidv4": "^6.2.13",
        "zod": "^3.23.8"
    }
}
